	<script>
		var obj = null;

		function signin(){
			id	= $("#id").val();
			len = id.length;
			if(len === 0){
				$('.alert-message').html("ID를 입력해주세요");
				$('#message').fadeIn();
				obj = $("#id");
				return;
			}				

			email	= $("#email").val();
			len = email.length;
			if(len === 0){
				$('.alert-message').html("이메일을 입력해주세요");
				$('#message').fadeIn();
				obj = $("#email");
				return;
			}				

			password	= $("#password").val();
			len = password.length;
			if(len === 0){
				$('.alert-message').html("비밀번호를 입력해주세요");
				$('#message').fadeIn();
				obj = $("#password");
				return;
			}				

			name	= $("#name").val();
			len = name.length;
			if(len === 0){
				$('.alert-message').html("이름을 입력해주세요");
				$('#message').fadeIn();
				obj = $("#name");
				return;
			}				

			mobile	= $("#mobile").val();
			len = mobile.length;
			if(len === 0){
				$('.alert-message').html("휴대전화번호를 입력해주세요");
				$('#message').fadeIn();
				obj = $("#mobile");
				return;
			}				

			//address	 = $("#address").val();
			postcode = $("#postcode").val();
			len = postcode.length;
			if(len === 0){
				$('.alert-message').html("주소를 입력해 주세요");
				$('#message').fadeIn();
				obj = $("#address");
				return;
			}				

			address1 = $("#address1").val();
			len = address1.length;
			if(len === 0){
				$('.alert-message').html("주소를 입력해 주세요");
				$('#message').fadeIn();
				obj = $("#address1");
				return;
			}				
			
		}

	</script>
